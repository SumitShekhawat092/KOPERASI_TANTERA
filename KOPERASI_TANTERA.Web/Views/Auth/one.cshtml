@model KOPERASI_TANTERA.Web.Models.Auth.StepOneModel 

<h1>Create Account</h1>

<div class="container border">
    <form asp-controller="Auth" asp-action="one" id="form1" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="CustomerName"></label>
                </div>
                <div class="col-5">
                <input type="text" asp-for="CustomerName" name="CustomerName" id="CustomerName" />
                    <span asp-validation-for="CustomerName"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="ICNumber"></label>
                </div>
                <div class="col-5">
                <input type="text" asp-for="ICNumber" id="ICNumber" name="ICNumber" onkeypress="return isNumber(event)" />
                    <span asp-validation-for="ICNumber"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="MobileNumber"></label>
                </div>
                <div class="col-5">
                <input type="text" asp-for="MobileNumber" id="MobileNumber" name="MobileNumber" onkeypress="return isNumber(event)" />
                    <span asp-validation-for="MobileNumber"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="EmailAddress"></label>
                </div>
                <div class="col-5">
                <input type="text" asp-for="EmailAddress" id="EmailAddress" name="EmailAddress" />
                    <span asp-validation-for="EmailAddress"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        
    }
    <script type="text/javascript">
        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) { return false; } 
            return true;
        }
    </script>
}